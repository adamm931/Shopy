
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Shopy.Admin.ViewModels;
@model CategoryListViewModel
<h2>Categories <a href="@Url.RouteUrl("Categories" , new { action = "Add"})" class="btn btn-success">Add</a></h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>#ID</th>
                <th>Name</th>
                <th>Action</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(CategoryListItemViewModel item in Model.Items)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.Caption</td>
                    <td>
                        <a href="@Url.RouteUrl("Categories", new { action = "Delete", uid = item.Uid})"
                           class="btn btn-secondary" role="button">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
