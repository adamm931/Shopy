
@{
    ViewBag.Title = "List";
}

<!-- ko with: products -->
<div class="container">
    <div class="row">

        <div class="col-lg-3">

            <!-- category filters -->
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title filters-title">
                        <a data-bind="click: unsetSelectedCategory" href="javascript:void(0);">Categories</a></h4>
                    <div class="list-group">
                        <!-- ko foreach: categoryFilters-->
                        <a href="javascript:void(0);" 
                           class="list-group-item" 
                           data-bind="css: { price: selected }, text: caption, click: $root.setSelectedCategory"></a>
                        <!-- /ko -->
                    </div>
                </div>
            </div>

            <!-- price filers -->
            @*<div class="card">
                <div class="card-body">
                    <h4 class="card-title filters-title">Prices</h4>
                    <div id="sliderDouble" class="slider slider-info"></div>
                </div>
            </div>*@

            <!-- size filters -->
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title filters-title">
                        <a data-bind="click: unsetSizeFilters" href="javascript:void(0);">Sizes</a>
                    </h4>
                    <div class="list-group">
                        <!-- ko foreach: sizeFilters-->
                        <div class="custom-control custom-checkbox">
                            <input data-bind="attr: {id: id}, checked: $parent.selectedSizes, checkedValue: id" type="checkbox" class="custom-control-input">
                            <label data-bind="text: caption, attr: {for: id}" class="custom-control-label"></label>
                        </div>
                        <!-- /ko -->
                    </div>
                </div>
            </div>


            <!-- brand filters -->
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title filters-title">
                        <a data-bind="click: unsetBrandFilters" href="javascript:void(0);">Brands</a>
                    </h4>
                    <div class="list-group">
                        <!-- ko foreach: brandFilters -->
                        <div class="custom-control custom-checkbox">
                            <input data-bind="attr: {id: id}, checked: $parent.selectedBrands, checkedValue: id"type="checkbox" class="custom-control-input">
                            <label data-bind="text: caption, attr: {for: id}" class="custom-control-label"></label>
                        </div>
                        <!-- /ko -->
                    </div>
                </div>
            </div>
            <div class="separator"></div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            <div class="row text-center">

                <!-- ko foreach: items -->
                <div class="col-lg-4 col-md-6">
                    <a data-bind="attr: { href: detailsLink }">
                        <div class="card h-90" data-bind="event: { mouseover: toogleDetails, mouseout: toogleDetails }">
                            <img data-bind="attr: { src: image1Url }, css: { 'w-50': detailsVisible, 'm-auto': detailsVisible }" class="card-img-top" alt="">
                            <div class="card-body">
                                <h4 data-bind="text: caption, css: { price: detailsVisible }" class="card-title"></h4>
                                <h5 data-bind="text: price, visible: !detailsVisible()" class="price font-weight-bold"></h5>
                                <div style="display: block" data-bind="visible: detailsVisible" class="">
                                    <div class="pt-3 m-auto">
                                        sizes : <span data-bind="text: prettySizes"></span>
                                    </div>
                                    <div class="pt-3 border-bottom mx-auto">
                                        <i class="fas fa-circle"></i>
                                        <i class="fas fa-circle"></i>
                                        <i class="fas fa-circle"></i>
                                        <i class="fas fa-circle"></i>
                                    </div>
                                    <div class="pt-3 mx-auto">
                                        <img src="~/Content/imgs/language.svg" />
                                        <img class="ml-4 mr-4" src="~/Content/imgs/cart.svg" />
                                        <img src="~/Content/imgs/favourite.svg" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <!-- /ko -->
                <div class="col-lg-12">
                    <a class="btn btn-lg btn-block load-more">...</a>
                </div>
            <!-- /.row -->
        </div>
        <!-- /.col-lg-9 -->
    </div>
        <!-- /.col-lg-9 -->

        <div class="col-lg-12 card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-5">
                        <h5 class="text-uppercase news-letter">NEWS LETTER</h5>
                    </div>
                    <div class="col-lg-3 pt-4">
                        <span class="font-italic text-center">type your mail here</span>
                    </div>
                    <div class="col-lg-3 pt-3">
                        <button type="button" class="btn btn-deep-orange text-uppercase font-weight-bold float-md-right join-us">join us</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- /.col-lg-12 -->
    </div>
    
    <!-- /.row -->
    </div>
<!-- /.container -->

